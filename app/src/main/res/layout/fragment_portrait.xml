<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortraitFragment">

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ng_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ng_label"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/hang_image"
        app:layout_constraintEnd_toEndOf="@+id/hang_image"
        app:layout_constraintStart_toStartOf="@+id/hang_image" />

    <ImageView
        android:id="@+id/hang_image"
        android:src="@drawable/start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/answer_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="mr hangman" />

    <GridLayout
        android:id="@+id/answer_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:useDefaultMargins="true"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/choice_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/letter1"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/answer_letter"/>

        <TextView
            android:id="@+id/letter2"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/answer_letter"/>

        <TextView
            android:id="@+id/letter3"
            android:layout_row="0"
            android:layout_column="2"
            style="@style/answer_letter"/>

        <TextView
            android:id="@+id/letter4"
            android:layout_row="0"
            android:layout_column="3"
            style="@style/answer_letter"/>

        <TextView
            android:id="@+id/letter5"
            android:layout_row="0"
            android:layout_column="4"
            style="@style/answer_letter"/>

        <TextView
            android:id="@+id/letter6"
            android:layout_row="0"
            android:layout_column="5"
            style="@style/answer_letter"/>

    </GridLayout>

    <TextView
        android:id="@+id/choice_label"
        android:text="@string/choice_label"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/choice_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/choice_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/A"
            android:text="A"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/choice_letter"
             />

        <Button
            android:id="@+id/B"
            android:text="B"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/C"
            android:text="C"
            android:layout_row="0"
            android:layout_column="2"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/D"
            android:text="D"
            android:layout_row="0"
            android:layout_column="3"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/E"
            android:text="E"
            android:layout_row="0"
            android:layout_column="4"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/F"
            android:text="F"
            android:layout_row="0"
            android:layout_column="5"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/G"
            android:text="G"
            android:layout_row="0"
            android:layout_column="6"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/H"
            android:text="H"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/I"
            android:text="I"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/J"
            android:text="J"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/K"
            android:text="K"
            android:layout_row="1"
            android:layout_column="3"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/L"
            android:text="L"
            android:layout_row="1"
            android:layout_column="4"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/M"
            android:text="M"
            android:layout_row="1"
            android:layout_column="5"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/N"
            android:text="N"
            android:layout_row="1"
            android:layout_column="6"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/O"
            android:text="O"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/P"
            android:text="P"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/Q"
            android:text="Q"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/R"
            android:text="R"
            android:layout_row="2"
            android:layout_column="3"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/S"
            android:text="S"
            android:layout_row="2"
            android:layout_column="4"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/T"
            android:text="T"
            android:layout_row="2"
            android:layout_column="5"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/U"
            android:text="U"
            android:layout_row="2"
            android:layout_column="6"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/V"
            android:text="V"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/W"
            android:text="W"
            android:layout_row="3"
            android:layout_column="1"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/X"
            android:text="X"
            android:layout_row="3"
            android:layout_column="3"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/Y"
            android:text="Y"
            android:layout_row="3"
            android:layout_column="5"
            style="@style/choice_letter"/>

        <Button
            android:id="@+id/Z"
            android:text="Z"
            android:layout_row="3"
            android:layout_column="6"
            style="@style/choice_letter"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>