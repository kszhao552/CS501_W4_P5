<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeFragment">

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello bruh"
        app:layout_constraintBottom_toBottomOf="@+id/hint_button"
        app:layout_constraintEnd_toEndOf="@id/choice_grid"
        app:layout_constraintStart_toEndOf="@id/hint_button"
        app:layout_constraintTop_toTopOf="@id/hint_button" />

    <Button
        android:id="@+id/hint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="@string/hint_button_text"
        app:layout_constraintStart_toStartOf="@id/choice_grid"
        app:layout_constraintTop_toTopOf="@+id/hang_image" />

    <Button
        android:id="@+id/ng_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ng_label"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/hang_image"
        app:layout_constraintStart_toEndOf="@+id/hang_image"
        app:layout_constraintTop_toTopOf="@+id/hang_image" />

    <ImageView
        android:id="@+id/hang_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="mr hangman"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/answer_grid"
        app:layout_constraintStart_toStartOf="@id/answer_grid" />

    <GridLayout
        android:id="@+id/answer_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/letter1"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/letter2"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/letter3"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:id="@+id/letter4"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="3" />

        <TextView
            android:id="@+id/letter5"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="4" />

        <TextView
            android:id="@+id/letter6"
            style="@style/answer_letter"
            android:layout_row="0"
            android:layout_column="5" />

    </GridLayout>

    <TextView
        android:id="@+id/choice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/choice_label"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/choice_grid"
        app:layout_constraintEnd_toEndOf="@id/choice_grid"
        app:layout_constraintStart_toStartOf="@id/choice_grid" />

    <GridLayout
        android:id="@+id/choice_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/A"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="0"
            android:text="A" />

        <Button
            android:id="@+id/B"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="1"
            android:text="B" />

        <Button
            android:id="@+id/C"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="2"
            android:text="C" />

        <Button
            android:id="@+id/D"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="3"
            android:text="D" />

        <Button
            android:id="@+id/E"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="4"
            android:text="E" />

        <Button
            android:id="@+id/F"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="5"
            android:text="F" />

        <Button
            android:id="@+id/G"
            style="@style/choice_letter"
            android:layout_row="0"
            android:layout_column="6"
            android:text="G" />

        <Button
            android:id="@+id/H"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="0"
            android:text="H" />

        <Button
            android:id="@+id/I"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="1"
            android:text="I" />

        <Button
            android:id="@+id/J"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="2"
            android:text="J" />

        <Button
            android:id="@+id/K"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="3"
            android:text="K" />

        <Button
            android:id="@+id/L"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="4"
            android:text="L" />

        <Button
            android:id="@+id/M"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="5"
            android:text="M" />

        <Button
            android:id="@+id/N"
            style="@style/choice_letter"
            android:layout_row="1"
            android:layout_column="6"
            android:text="N" />

        <Button
            android:id="@+id/O"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="0"
            android:text="O" />

        <Button
            android:id="@+id/P"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="1"
            android:text="P" />

        <Button
            android:id="@+id/Q"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="2"
            android:text="Q" />

        <Button
            android:id="@+id/R"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="3"
            android:text="R" />

        <Button
            android:id="@+id/S"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="4"
            android:text="S" />

        <Button
            android:id="@+id/T"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="5"
            android:text="T" />

        <Button
            android:id="@+id/U"
            style="@style/choice_letter"
            android:layout_row="2"
            android:layout_column="6"
            android:text="U" />

        <Button
            android:id="@+id/V"
            style="@style/choice_letter"
            android:layout_row="3"
            android:layout_column="0"
            android:text="V" />

        <Button
            android:id="@+id/W"
            style="@style/choice_letter"
            android:layout_row="3"
            android:layout_column="1"
            android:text="W" />

        <Button
            android:id="@+id/X"
            style="@style/choice_letter"
            android:layout_row="3"
            android:layout_column="3"
            android:text="X" />

        <Button
            android:id="@+id/Y"
            style="@style/choice_letter"
            android:layout_row="3"
            android:layout_column="5"
            android:text="Y" />

        <Button
            android:id="@+id/Z"
            style="@style/choice_letter"
            android:layout_row="3"
            android:layout_column="6"
            android:text="Z" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>